{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "run clean",
            "command": "./clean.sh"
        },
        {
            "type": "shell",
            "label": "run qmake",
            "command": "qmake",
            "args": [
                "hello.pro"
            ],
            "dependsOn": [
                "run clean"
            ],
            "problemMatcher": {
                "owner": "qmake",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*?):(\\d+):(.*?) (error|warning): (.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 4,
                    "message": 5
                },
            },
            "group": {
                "kind": "build"
            },
        },
        {
            "type": "shell",
            "label": "run make",
            "command": "make",
            "args": [],
            "dependsOn": [
                "run qmake"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true,
                "close": false
            }
        },
        {
            "type": "cppbuild",
            "label": "active-file-build",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wl,-v",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/release/${fileBasenameNoExtension}.exe",
                "-IC:/Qt/6.8.2/mingw_64/include",
                "-IC:/Qt/6.8.2/mingw_64/include/QtWidgets",
                "-IC:/Qt/6.8.2/mingw_64/include/QtGui",
                "-IC:/Qt/6.8.2/mingw_64/include/QtCore",
                "-IC:/Qt/6.8.2/mingw_64/mkspecs/win32-g++",
                "-LC:\\Qt\\6.8.2\\mingw_64\\lib",
                "-lC:\\Qt\\6.8.2\\mingw_64\\lib\\libQt6Widgets.a",
                "-lC:\\Qt\\6.8.2\\mingw_64\\lib\\libQt6Gui.a",
                "-lC:\\Qt\\6.8.2\\mingw_64\\lib\\libQt6Core.a"
            ],
            "options": {
                "cwd": "C:/ProgramData/mingw64/mingw64/bin/"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        }
    ]
}